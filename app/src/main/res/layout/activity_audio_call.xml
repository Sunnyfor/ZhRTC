<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/new_ui_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/video_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/new_ui_blue">

        <ImageButton
            android:id="@+id/ui_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/new_ui_logo" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ui_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_num"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2050"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/new_ui_audio_call_toplayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/attr"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attr"
            android:layout_centerInParent="true"
            android:text="用户名A正在呼入"
            android:textColor="#FFFFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_calling_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_call_number"
            android:layout_centerHorizontal="true"
            android:text="正在呼叫"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/chronometer_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_call_number"
            android:layout_centerHorizontal="true"
            android:format="%s"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tiaoshi2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_call_number"
            android:singleLine="false"
            android:text="" />

        <TextView
            android:id="@+id/tiaoshi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chronometer_call_time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_call_number"
            android:singleLine="false"
            android:text="" />

        <TextView
            android:id="@+id/bofang_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_calling_hint"
            android:layout_alignParentTop="true"
            android:text="" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/keyBoardLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="1"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="2"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="3"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="4"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="5"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="6"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialNum7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="7"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="8"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="9"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/dialx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="*"
                android:text="*"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="0"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="#"
                android:text="#"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/new_ui_audio_call_bottomlayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="35dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_answer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/new_ui_voice_call_answer" />

            <TextView
                android:id="@+id/new_ui_video_call_divide0"
                android:layout_width="30dp"
                android:layout_height="fill_parent" />

            <ImageButton
                android:id="@+id/btn_hangup"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/new_ui_voice_call_hung_up" />

            <TextView
                android:id="@+id/new_ui_video_call_divide1"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_hangup_conned"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_ui_voice_call_hung_up"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/audio_maike"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/open_maike_press" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/audio_laba"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/open_laba_press" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/keyBoardd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/keyboard_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/audio_moude"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/new_ui_notice_button"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>