<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/new_ui_blue"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/keyBoardLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialNum1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="1"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="2"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="3"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialNum4"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="4"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum5"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="5"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum6"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="6"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialNum7"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="7"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum8"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="8"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum9"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="9"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/dialx"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="*"
                android:text="*"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialNum0"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="0"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialj"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tag="#"
                android:text="#"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/new_ui_audio_call_bottomlayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:id="@+id/attrLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/attr"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/new_ui_logo" />

            <TextView
                android:id="@+id/tv_call_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_call_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@id/attrLayout"
            android:layout_marginTop="40dp"
            android:gravity="center">


            <ImageButton
                android:id="@+id/btn_answer"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:background="@drawable/new_ui_voice_call_answer" />

            <TextView
                android:id="@+id/new_ui_video_call_divide0"
                android:layout_width="30dp"
                android:layout_height="fill_parent" />

            <ImageButton
                android:id="@+id/btn_hangup"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/new_ui_voice_call_hung_up" />

            <TextView
                android:id="@+id/new_ui_video_call_divide1"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_hangup_conned"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_ui_voice_call_hung_up"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/audio_maike"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/open_maike_press" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/audio_laba"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/open_laba_press" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/keyBoardd"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/keyboard_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/audio_moude"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/new_ui_notice_button"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/audio_mic_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@mipmap/audio_call_nomal"
        android:visibility="gone" />
</LinearLayout>